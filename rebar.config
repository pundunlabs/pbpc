{sub_dirs, ["rel"]}.

{require_otp_vsn, "17"}.

{lib_dirs, []}.

{erl_opts, [debug_info,
	    {i, "./include"},
	    {i, "./deps/gb_log/include"}
	   ]}.
{eunit_opts, [verbose]}.

{deps, [
	{scramerl, ".*", {git, "https://github.com/erdemaksu/scramerl.git"}},
	{apollo, ".*", {git, "https://github.com/erdemaksu/apollo.git"},[raw]}
    ]}.

{pre_hooks, [
    {compile, "erlc -o ./src/ $REBAR_DEPS_DIR/apollo/*.asn1"}
    ]
}.
